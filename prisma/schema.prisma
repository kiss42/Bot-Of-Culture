generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model RPSGame {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  interactionId  String @unique
  userId  String
  guildId String
  choice  String
}

model MovieReview {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  movieId String  
  guildId String
  score Int
  comment String?
  userId String
  username String
  createdAt DateTime @default(now()) @map("_createdAt")

  @@index([movieId, guildId, userId])
}